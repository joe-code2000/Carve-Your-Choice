<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.carveyourchoice">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DARK_THEME"
        tools:targetApi="31">
        <activity
            android:name=".Activities.EditRecipeActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".Activities.MyRecipe.AddRecipeActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".Activities.MealPlanner.SelectMealPlannerActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".Activities.MyRecipe.MyRecipeActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".Activities.RecipeDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".Activities.MealPlanner.MealPlannerActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".Activities.Grocery.GroceryActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".Activities.Grocery.GroceryDetailActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>