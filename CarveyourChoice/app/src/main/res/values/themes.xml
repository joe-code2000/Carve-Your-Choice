<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CarveYourChoice" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.DARK_THEME" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/dark_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="itemIconSize">28sp</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemBackground">@color/transparent_background</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="hintTextColor">@color/white</item>
    </style>
    <style name="CustomTheme">
        <item name="android:background">@color/transparent_background</item>
    </style>

    <style name="Theme.LIGHT_THEME" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/light_background</item>
        <item name="backgroundTint">@color/dark_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="itemIconSize">28sp</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
        <item name="itemBackground">@color/transparent_background</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="hintTextColor">@color/white</item>
    </style>
</resources>